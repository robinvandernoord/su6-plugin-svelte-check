{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["warnings/**/*.d.ts", "warnings/**/*.ts", "warnings/**/*.js", "warnings/**/*.svelte"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}